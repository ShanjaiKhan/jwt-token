pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    bat 'mvn clean package'
                }
            }
        }
        stage('Run JAR File') {
            steps {
                script {
                    def jarFilePath = "C:/ProgramData/Jenkins/.jenkins/workspace/jwt-token/target/*.jar"
                    bat "java -jar ${jarFilePath}"
                }
            }
        }
    }
}

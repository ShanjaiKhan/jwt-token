pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    powershell 'mvn clean package'
                }
            }
        }
        stage('Run JAR File') {
            steps {
                script {
                    def jarFilePath = "C:/ProgramData/Jenkins/.jenkins/workspace/jwt-token/target/*.jar"
                    powershell "java -jar ${jarFilePath}"
                }
            }
        }
    }
}

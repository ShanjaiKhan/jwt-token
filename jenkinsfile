pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    bat 'mvn clean package'
                }
            }
        }
      stage ('Run JAR File') {
            steps {
                script {
                    def jarFilePath = 'C:/ProgramData/Jenkins/.jenkins/workspace/demo3/target/*.jar'
                    def batchScript = "\"C:\\Windows\\System32\\cmd.exe\" /c \"java -jar ${jarFilePath}\""
                    bat label: 'Run JAR in Background', script: batchScript
                }
            }
        }
    }
}
